@model HandleErrorInfo
@{
    ViewBag.Title = "Server Error";
    ViewBag.BodyClass = "error-page";
}
<div class="boxed">
    <div class="container">
        <div class="row-fluid">
            <div class="span2" style="font-size: 24px; line-height: 1.5em;">
                <i class="icon-cogs icon-4x"></i>
            </div>
            <div class="offset1 span9">
                <h1>Server Error <span>:(</span></h1>
                <p class="text-error">Sorry, but an error occurred.</p>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12"></div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                @if (Model != null && Model.Exception != null)
                {
                    <div class="nav-collapse collapse">
                        <ul>
                            <li>Controller: @Model.ControllerName</li>
                            <li>Action: @Model.ActionName</li>
                            <li>Message: @Model.Exception.Message</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
