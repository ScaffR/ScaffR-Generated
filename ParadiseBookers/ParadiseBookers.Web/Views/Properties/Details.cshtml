@{
    ViewBag.Title = "Details";
    Bundles.Reference("googleMaps");
}


@model ParadiseBookers.Models.Properties.PropertyViewModel

@using (Html.BeginForm("Update", "Properties", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Unable to save property. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })

    @Html.EditorForModel()

    <div class="form-actions">
        <input type="submit" value="Save" class="btn btn-inverse btn-large" />
    </div>
}
