@model DemoApplication.Models.Account.RegisterModel
@{
    ViewBag.Title = "Create a new account";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{                                 
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
                                   
    @Html.EditorForModel()         
            
    <div class="form-actions">
        <input type="submit" value="Create Account" class="btn btn-inverse btn-large" />
        <input type="reset" value="Clear Form" class="btn btn-large" title="Remove all the data from the form." />
    </div>                          
}
