@{
    ViewBag.Title = "User Details";
}
@model DemoApplication.Models.Users.UserViewModel

<div class="tab-content">
    <div class="tab-pane active" id="details">

        <form method="POST" action="" class="form-horizontal">

            @Html.ValidationSummary(true, "Unable to save user data. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })

            @Html.EditorForModel()

            <div class="form-actions">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
