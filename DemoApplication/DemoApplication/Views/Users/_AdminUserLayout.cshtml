@using DemoApplication.Extensions.SitemapHelpers
@model DemoApplication.Models.Users.UserViewModel

@section AltNav{

    @Html.MvcSiteMap().Pills(SiteMap.Provider.FindSiteMapNodeFromKey("ManageUsers"), true,false)

    <div class="btn-group pull-right">

        <ul class="dropdown-menu">
            @if (Model.IsLockedOut)
            {
                <li><a href="#" id="lock-user"><i class="icon-lock"></i>Lock User</a></li>
            }
            else
            {
                <li><a href="#" id="unlock-user"><i class="icon-unlock"></i>Unlock User</a></li>
            }
        </ul>
    </div>
}


@RenderBody()






