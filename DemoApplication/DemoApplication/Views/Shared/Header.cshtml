<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">

            @if (!Request.IsAuthenticated)
            {
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            }

            <a class="brand" href="~/">
                <i class="icon-flag"></i>
                Demo Application
            </a>

            @if (Request.IsAuthenticated)
            {

                <ul class="nav pull-right">
                    <li @Html.ActiveWhen("Profile", "Account")><a href="@Url.Action("Profile", "Account")" data-toggle="tooltip" title="Profile">
                        <i class="icon-user"></i>@UserProfile.Current.FullName</a></li>
                    <li @Html.ActiveWhen("Settings", "Account")><a href="@Url.Action("Settings", "Account")"  data-toggle="tooltip" title="Settings"><i class="icon-cog"></i></a></li>
                    <li><a href="@Url.Action("LogOff", "Account")" data-toggle="tooltip" title="Signout"><i class="icon-signout"></i></a></li>
                </ul>

            }
            else
            {         
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        <li @Html.ActiveWhen("Login", "Account")><a href="@Url.Action("Login", "Account")"><i class="icon-user icon-white"></i>Login</a></li>
                        <li @Html.ActiveWhen("Register", "Account")><a href="@Url.Action("Register", "Account")"><i class="icon-th-list icon-white"></i>Register</a></li>
                    </ul>
                </div>
            }

        </div>
    </div>
</div>
