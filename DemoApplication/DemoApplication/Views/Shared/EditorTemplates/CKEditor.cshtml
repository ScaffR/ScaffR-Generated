
@{
    var attrs = new Dictionary<string, object>();
    var classes = new List<string> { "ckeditor" };
    
    
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("class"))
    {
        classes.Add(ViewData.ModelMetadata.AdditionalValues["class"] as string);
    }
    attrs.Add("class", String.Join(" ", classes));
    
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("toolbar-config"))
    {
        attrs.Add("data-toolbar", ((CKEditorToolbar)ViewData.ModelMetadata.AdditionalValues["toolbar-config"]).ToString());
    }
}

@Html.TextArea(string.Empty, (string) ViewData.TemplateInfo.FormattedModelValue, attrs)